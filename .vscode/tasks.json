
// A task runner that calls the MakeCode (PXT) compiler
{
    "version": "2.0.0",
    "tasks": [{
        "label": "build & deploy",
        "type": "shell",
        "command": "makecode build -d",
        "group": "build",
        "problemMatcher": [ "$tsc" ]
    }, {
        "label": "watch & serve",
        "type": "shell",
        "command": "makecode serve",
        "group": "build",
        "problemMatcher": [ "$tsc" ]
    }]
}

